PORT=3001
NODE_ENV=production
DATABASE_URL=postgresql://username:password@localhost:5432/deal_disaster
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random

# Frontend URL for OAuth redirects (change to your Heroku app URL)
CLIENT_URL=https://your-app-name.herokuapp.com
SERVER_URL=https://your-app-name.herokuapp.com

# Google OAuth (Get from: https://console.cloud.google.com/apis/credentials)
# Add https://your-app-name.herokuapp.com/api/auth/google/callback to Authorized redirect URIs
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth (Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps)
# Add https://your-app-name.herokuapp.com/api/auth/microsoft/callback to Redirect URIs
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
