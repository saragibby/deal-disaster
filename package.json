{
  "name": "deal-or-disaster",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "24.x",
    "npm": "10.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "setup": "cd server && npm install && npm run db:setup",
    "heroku-postbuild": "npm install && npm run build && cd server && npm install && npm run build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.10"
  }
}
